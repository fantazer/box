// Markup:
// <a href="#" class="{{modifier_class}}">Link</a>
//<button type="submit" class="{{modifier_class}}">button</button>
//<input type="submit" class="{{modifier_class}}" value="Input:submit" />
//<input type="button" class="{{modifier_class}}" value="Input:button" />
//
// Styleguide 3


btnStyle(bg-btn,color-btn)
	background bg-btn
	color color-btn
	&:hover
		background darken(bg-btn,20)
		color color-btn

btnStyleLight(br-btn,color-btn)
	color color-btn
	border br-btn solid color-btn
	&:hover
		color darken(color-btn,20)
		border br-btn solid darken(color-btn,20)
		
.btn
	+below(768px)
		padding 10px 30px
	text-transform uppercase
	tr(all)
	display inline-block
	font-size 13px
	padding 20px 50px
	&:hover
		cursor pointer
	
.btn--md
	padding 10px 20px
	
.btn--red
	btnStyle(red,white)
	
button
	font-family $v-font

