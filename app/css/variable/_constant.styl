//  ============================ Typography ============================ 

// Typography
//
//
// Styleguide 2

// Typography-size
//
// Main font - $v-font =  PT Sans
//.type--lg - = 28px
//.type--md - = 22px
//.type--main	- = 16px
//.type--sm  - = 13px
//
// Markup:
// <span class="{{modifier_class}}">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Eos, quidem!</span>
//
// Styleguide 2.1

$main-text-color = #6c7279
$link-color = black
$link-color-visited = grey
$link-color-hover = black

//webfont('PT Sans', 'PT Sans', 'normal')
$v-font =  Raleway


$weigh-light = 300
$weigh-normal = 400
$weigh-bold = 700

typeSize(fontSm,font)
	+below(768px)
		font-size font px
	font-size fontSm px

.type--lg
	typeSize(28,20)
	
.type--md
	typeSize(22,16)
	
.type--main
	typeSize(14,12)

.type--sm
	typeSize(13,10)


// Typography-type
//
//.type--italy  - font type italy
//.type--mid  - font type center
//.type--bold - font type bold
//
// Markup:
// <span class="{{modifier_class}}">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Eos, quidem!</span>
//
// Styleguide 2.2	

.type--up
	up()
.type--italy
	font-style italic
.type--mid
	text-align center
.type--bold
	font-weight $weigh-bold
.type--light
	font-weight $weigh-light
	
a
	text-decoration none
	color $link-color
	
a:hover
	text-decoration none
	color  $link-color-hover
	
