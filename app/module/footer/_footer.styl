//! block footer
.footer-wraper 
	+below(768px)
		padding 30px 0 0 0
	background #3a3e64
	padding 70px 0
	color white
//.main-cont 
.footer
	+below(768px)
		fw()
	flex(between)
	justify-content flex-start
.footer__el 
	+below(768px)
		width 100%
		margin-bottom 20px
	flex(mid)
	fl()
	fw()
	width 33%
	p
		margin 0
		margin-bottom 10px
		color rgba(255, 255, 255, 0.5);
		text-align center
		line-height 21px
		width 100%
.footer__el-title 
	up()
	text-align center
	font-size 14px
	font-weight 700
	margin-bottom 20px
.footer__soc 
	flex(between)
.footer__soc-el 
	flex(mid)
	tr(all)
	padding 5px
	margin-right 5px
	border 1px solid white
	&:hover
		border 1px solid darken(red,10)
		.icons
			fill darken(red,10)
	.icons
		size 15
		fill white
//.icons 
.footer-sub 
	flex(mid) 
	fl()
	fw()
	color rgba(255, 255, 255, 0.5);
	background #313454
	padding 20px 0
	padding-bottom 10px
.footer-sub__info 
	margin-bottom 10px
	font-size 13px
	span
		color white
.footer-sub__icon
	display inline-block
		
	.icon
		size 10
		margin 0px 5px
		fill red
//!block footer end